{
  "name": "shopping-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npx prisma migrate deploy && node dist/index.js",
    "dev": "npm run build && npx prisma migrate dev && node dist/index.js",
    "build": "tsc",
    "build:check": "tsc --noEmit -p tsconfig.json",
    "db:migrate:create": "npx prisma migrate dev --name $1",
    "db:migrate:test": "dotenv -e .env.test npx prisma migrate dev",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepare": "husky install",
    "pre-commit": "npm run lint",
    "pre-push": "npm run build:check",
    "commitlint": "commitlint --edit ${1}",
    "test": "dotenv -e .env.test jest -- --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kadirbelen/shopping-app.git"
  },
